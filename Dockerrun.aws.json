{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "andrzejcz/multi-client",  
            "hostname":  "client",
            "essential": false
        }, 
        {
            "name": "server",
            "image": "andrzejcz/multi-server",  
            "hostname":  "api",
            "essential": false
        }, 
        {
            "name": "worker",
            "image": "andrzejcz/multi-worker",  
            "hostname":  "worker",
            "essential": false
        }, 
        {
            "name": "nginx",
            "image": "andrzejcz/nginx", 
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPorts": 80,
                    "containerPort": 80
                }
                

            ], 
            "links": ["client", "server"]
        }
    ]
}